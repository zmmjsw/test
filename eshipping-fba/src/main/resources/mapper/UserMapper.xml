<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.eshipping.fba.dao.UserDao">

	<insert id="saveUser" parameterType="com.eshipping.fba.entity.UserInfo"  useGeneratedKeys="true" keyProperty="uid">
		insert ignore into
		user_info(name,pass_word,user_name,salt,state)
		values(
		#{name},
		#{passWord},
		#{userName},
		#{salt},
		#{state}
		)
	</insert>
	
		<insert id="saveSysUserRole" >
		insert into
		sys_user_role(role_id,uid)
		values(
		#{roleId},
		#{uid}
		)
	</insert>
	
	





</mapper>
